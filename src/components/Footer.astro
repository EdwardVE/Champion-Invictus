---
const today = new Date();
const currentYear = today.getFullYear();
// ¡Recuerda cambiar tu nombre aquí!
const copyrightName = "Edward VE"; 

// Definición de las URLs de las redes
const socialLinks = [
  { 
    href: "https://github.com/EdwardVE", 
    label: "GitHub", 
    // SVG de Lucide para GitHub (24x24)
    icon: `<path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"></path><path d="M9 18c-4.51 2-5-2-7-2"></path>`
  },
  { 
    href: "https://www.linkedin.com/in/edward-ronaldo-vasallo-eraso-83a7a6159/", 
    label: "LinkedIn", 
    // SVG de Lucide para LinkedIn
    icon: `<path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path><rect width="4" height="12" x="2" y="9"></rect><circle cx="4" cy="4" r="2"></circle>`
  },
  { 
    href: "https://twitter.com", 
    label: "Twitter", 
    // SVG de Lucide para Twitter
    icon: `<path d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"></path>`
  },
  { 
    href: "https://instagram.com", 
    label: "Instagram", 
    // SVG de Lucide para Instagram
    icon: `<rect width="20" height="20" x="2" y="2" rx="5" ry="5"></rect><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line x1="17.5" x2="17.51" y1="6.5" y2="6.5"></line>`
  },
];
---

<footer class="text-center py-16 px-4 border-t border-gray-200 dark:border-gray-800">
    
    <div class="social-links flex justify-center gap-6 mb-4">
        {socialLinks.map(link => (
            <a 
                href={link.href} 
                target="_blank" 
                rel="noreferrer" 
                aria-label={link.label}
                class="text-gray-500 hover:text-accent transition-colors duration-200"
            >
                <span class="sr-only">{link.label}</span>
                <svg 
                    xmlns="http://www.w3.org/2000/svg" 
                    width="24" 
                    height="24" 
                    viewBox="0 0 24 24" 
                    fill="none" 
                    stroke="currentColor" 
                    stroke-width="2" 
                    stroke-linecap="round" 
                    stroke-linejoin="round"
                    set:html={link.icon}
                />
            </a>
        ))}
    </div>

    <p class="text-sm text-gray-500 dark:text-gray-400">
        &copy; {currentYear} {copyrightName}. Todos los derechos reservados.
    </p>

</footer>

<style>
/* Usamos el bloque de estilo de Astro para aplicar la variable de acento */
.social-links a:hover {
    color: var(--color-accent); /* Usa el color de acento definido en tu @theme */
}

/* Opcional: Estilo más específico para los íconos base si no quieres usar text-gray-500 */
.social-links a {
    color: var(--color-text-light); /* En modo claro */
}
.dark .social-links a {
    color: var(--color-text-dark); /* En modo oscuro */
}
</style>